@model Customers
<div class="row">
    <h2>Detail Information</h2>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#home">Detail Student</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#menu1">Course list</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="home" class="container tab-pane active">
            <br>
            <h3>DETAIL Customer</h3>
            <img src="~/@Model.imagePath" width="200" class="img-thumbnail" />
            <p>Id: @Model.customer_id</p>
            <p>Name: @Model.name</p>
            <p>Phone: @Model.phone</p>
            <p>Email: @Model.email</p>
        </div>  
    </div>
</div>
