@model IEnumerable<Customers>
<div class="row">

    <a class="btn btn-success" asp-action="Create">Create a new Customer</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.customer_id</td>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.phone</td>
                    <td><img src="~/@item.imagePath" width="500" class="img-thumbnail" /></td>
                    <td>
                        <a class="btn btn-danger" asp-route-id="@item.customer_id" asp-action="Delete">Delete</a>
                        <a class="btn btn-primary" asp-route-id="@item.customer_id" asp-action="Detail">Details</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>